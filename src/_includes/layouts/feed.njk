---
layout: layouts/default.njk
---

  {%- for post in collections.post -%}
    <article>
      <a href="{{post.url}}">
        <h2>{{post.data.pageTitle}}</h2>
      </a>

      <time datetime="{{post.date.toLocaleString('en-UK')}}">
        {{ post.date.toLocaleDateString('en-UK', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) | replace(',', '') }}
      </time>
      
      <p>{{post.data.description}}</p>
    </article>
  {%- endfor -%}



